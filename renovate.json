{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":dependencyDashboard", 
    ":rebaseStalePrs",
    "group:monorepos",
    "group:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "schedule": [
        "first day of the month"
      ]
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "schedule": [
        "after 2am every tuesday"
      ]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "stabilityDays": 3,
      "schedule": [
        "after 2am every monday"
      ]
    },
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 3
    }
  ],
  "prHourlyLimit": 0,
  "ignoreDeps": ["sass-loader"]
}
